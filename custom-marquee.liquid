<div class="marquee">
  <div class="marquee__inner">
    {% comment %} <span>ðŸš€ Free Shipping on Orders Above â‚¹999</span> {% endcomment %}
    {% if section.settings.marquee_content == 'image' %}
     {% for block in section.blocks %}
         <img class="marquee_image" src="{{ block.settings.marquee_image | image_url }}">
    {% endfor %}
    {% else %}
      <span>{{ section.settings.marquee_text }}</span>
    {% endif %}
  </div>
</div>

<style>
  .marquee {
      overflow: hidden;
      white-space: nowrap;
      background: {{ section.settings.background_color }};
      color: {{ section.settings.text_color }};
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
      font-weight: 600;
      font-size: 16px;
  }

  .marquee__inner {
      display: inline-flex;
      align-items: center;
      gap: 2rem;
      animation: marquee {{ section.settings.marquee_speed }}s linear infinite;
  }

  .marquee__inner img,
  .marquee__inner span {
      flex-shrink: 0;
  }
  .marquee__inner img{
      height: 50px;
      width: auto;
  }
  @keyframes marquee {
      from {
          transform: translateX(0);
      }
      to {
          transform: translateX(-50%);
      }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const marqueeInner = document.querySelector('.marquee__inner');
    const content = marqueeInner.innerHTML;

    // Duplicate until it's at least twice the width of the container
    let containerWidth = marqueeInner.parentElement.offsetWidth;
    let contentWidth = marqueeInner.scrollWidth;

    while (contentWidth < containerWidth * 2) {
      marqueeInner.innerHTML += content;
      contentWidth = marqueeInner.scrollWidth;
    }
  });
</script>

{% schema %}
{
  "name": "Custom Marquee",
  "settings": [
    {
      "type": "select",
      "id": "marquee_content",
      "label": "Marquee Content",
      "options": [
        {
          "label": "Text",
          "value": "text"
        },
        {
          "label": "Image",
          "value": "image"
        }
      ]
    },
    {
      "type": "text",
      "id": "marquee_text",
      "label": "Marquee Text"
    },
    {
      "type": "range",
      "id": "marquee_speed",
      "min": 10,
      "max": 40,
      "step": 2,
      "unit": "s",
      "label": "Marquee Speed",
      "default": 20,
      "info": "Lower = faster scroll, Higher = slower scroll"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Marquee Background Color",
      "default": "#111"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Marquee Text Color",
      "default": "#fff"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 2,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 16
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 2,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 16
    }
  ],
  "blocks": [
    {
      "type": "marquee_image",
      "name": "Marquee Image",
      "settings": [
        {
          "type": "image_picker",
          "id": "marquee_image",
          "label": "Marquee Image"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Custom Marquee"
    }
  ],
}
{% endschema %}
